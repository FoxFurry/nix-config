{
    "custom/spotify": {
        "exec": "~/.config/waybar/scripts/spotifyctl/mediaplayer.sh",
        "format": " {}  ",
        "return-type": "json",
        "on-click": "playerctl play-pause",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous"
    },
    
    "hyprland/window": {
        "separate-outputs": true
    },

    "tray": {
        "icon-size": 15,
        "spacing": 5
    },

    "hyprland/language": {
        "format": "{}",
        "format-en": "EN",
        "format-ru": "RU"
    },

    "wireplumber": {
        "format": "{volume}% {icon} ",
        "format-muted": "",
        "format-icons": ["", "", ""],
        "max-volume": 150
    },
    
    "custom/wireplumber": {
        "exec": "wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{print $2*100}'",
        "format": "{} ",
        "on-click": "playerctl play-pause",
        "interval": 1
    },

    "clock": {
        "framerate": 30,
        "interval": 1,
        "format": "{:%H:%M %p %A %b %d}",
        "tooltip": true,
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%d-%m-%Y}"
    },

    "cava": {
        "framerate": 30,
        "sleep-timer": 10,
        "method": "pulse",
        "bar_delimiter": 0,
        "channels": "mono",
        "format-icons" : ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█" ],
        "actions": {
            "on-click-right": "mode"
        }
    },

    "temperature": {
        "hwmon-path-abs": "/sys/devices/pci0000:00/0000:00:18.3/hwmon",
        "input-filename": "temp1_input",
        "interval": 1,
        "critical-threshold": 80,
        "format" : "{icon} {temperatureC}°C",
        "format-critical": "WARNING 󰸁 {temperatureC}°C",
        "format-icons": ["󱃃", "󰔏", "󱃂"]
    },

    "custom/cava": {
        "format": "{}",
        "exec": "cava",
        "tooltip": false
    },

    "custom/weather": {
        "format": "{} °",
        "tooltip": true,
        "interval": 3600,
        "exec": "wttrbar",
        "return-type": "json"
    },
    "custom/blank": {
        "format": " "
    },

    "custom/powermenu": {
        "format": "",
        "on-click": "~/.config/waybar/scripts/powermenu/wofi-power-menu.sh",
        "tooltip": false
    }
}
